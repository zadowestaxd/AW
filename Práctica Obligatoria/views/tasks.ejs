<!DOCTYPE html>
<html lang="es">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" media="screen" href="css/tasksScreen.css">
	<link rel="stylesheet" type="text/css" media="print" href="css/tasksPrint.css">
	<script src="/Práctica Voluntaria/PV4/routes/DAOTasks.js" type="text/javascript"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<title>Aplicaciones Web</title>
</head>
<meta charset="utf-8" />
<link rel="icon" type="image/x-ico"
	href="https://www.learningcontainer.com/wp-content/uploads/2020/09/Sample-ICO-file-Download-for-testing.ico">
<h12>UCM-CAU</h12>
</head>

<body>
	<div class="estructura cabecera">
		<div class="estructura icono">
			<img src="https://upload.wikimedia.org/wikipedia/donate/4/4f/Museum_Icon_local.png" height="48" width="64"
				alt="icono">
		</div>
		<div class="estructura caja-derecha">
			<p class="estructura datos">
				<a class="a1" href=>campusVerano2022@ucm.es</a>
			</p>
			<div class="estructura usuario">
				<img src="https://www.softzone.es/app/uploads-softzone.es/2018/04/guest.png" height="50" width="50"
					alt="usr">
			</div>
			<div class="boton">
				<button class="boton1" onclick="window.location.href='/logOut';"> Desconectar</button>
			</div>
		</div>
		<div>
			<form class="search_form" action="/search" method="POST">
				<input class="search_form" type="text" name="text" placeholder="Buscar" required>
				<input class="task_button search_form" type="submit" value="BUSCAR">
			</form>
		</div>
		<h2>Centro de atención al usuario</h2>
	</div>
	<main>
		<div class="own">
			<table class="table table-bordered table-responsive">
				<thead>
					<tr>
						<th scope="col">Fecha</th>
						<th scope="col">Texto</th>
						<th scope="col">Tipo</th>
						<th scope="col">Técnico</th>
					</tr>
				</thead>
				<tbody>
					<% tasks.forEach(function(task, i) { %>
						<% if (!task.done) { %>
							<tr>
								<th scope="row">
									<%= task.id %>
								</th>
								<td>
									<%= task.text %>
								</td>
								<td>
									<%= task.prioridad %>
								</td>
								<td>
									<%= task.idUser %>
								</td>
							</tr>
							<% } %>
								<% }); %>
				</tbody>
			</table>
		</div>


		<!-- Contenido de la ventana modal -->
		<button id="open-modal-btn">Abrir ventana modal</button>

		<!-- Ventana modal -->
		<div id="modal" class="modal">
			<div class="modal-content">
				<span class="close">&times;</span>
				<p>Añadir tarea</p>
			</div>
		</div>

	</main>
	<script>
		// Obtener el botón para abrir la ventana modal
		var btn = document.getElementById("open-modal-btn");

		// Obtener la ventana modal
		var modal = document.getElementById("modal");

		// Obtener el botón para cerrar la ventana modal
		var closeBtn = document.getElementsByClassName("close")[0];

		// Cuando el usuario haga clic en el botón, abrir la ventana modal
		btn.onclick = function () {
			modal.style.display = "block";
		}

		// Cuando el usuario haga clic en el botón de cerrar, cerrar la ventana modal
		closeBtn.onclick = function () {
			modal.style.display = "none";
		}

		// Cuando el usuario haga clic fuera de la ventana modal, cerrarla también
		window.onclick = function (event) {
			if (event.target == modal) {
				modal.style.display = "none";
			}
		}
	</script>
</body>

</html>